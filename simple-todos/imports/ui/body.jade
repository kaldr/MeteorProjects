//output: ../../imports/ui/body.html
body
	div.container
		header
			h1 Todo List ({{incompleteCount}})
			label.hide-completed
				input(type='checkbox')
				|Hide Completed Tasks
			{{> loginButtons}}
			{{#if currentUser}}
			form.new-task
				input(type='text' name='text' placeholder='Type to add new tasks')
			{{/if}}
		ul
			|{{#each tasks}}
			|	{{> task}}
			|{{/each}}
